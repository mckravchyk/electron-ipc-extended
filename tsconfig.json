{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "bundler",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./",
    "paths": {
      "electron-ipc-extended": ["src/index.ts"]
    }
  },
  "include": [
    "./src",
    "./examples",
    "./test",
  ],
}
